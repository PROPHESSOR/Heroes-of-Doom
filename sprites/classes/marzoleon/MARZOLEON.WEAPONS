// Arms in the hands of MarzoLeon

Actor MarzoLeonFist : Fist {
    +INVENTORY.RESTRICTABSOLUTELY

    Inventory.RestrictedTo "MarzoLeon"
    Weapon.Kickback 1000
    Inventory.PickupSound "marzoleon/pickup"

    States {
        Ready:
            MFIS A 1 A_WeaponReady
            Loop
        Deselect:
            MFIS A 1 A_Lower
            Loop
        Select:
            MFIS A 1 A_Raise
            Loop
        Fire:
            MFIS B 1
            Goto Hold
        Hold:
            MFIS CD 2
            TNT1 A 0 A_PlaySound("marzoleon/fist1", CHAN_5)
            // GZDoom-only
            // MFIS E 4 A_CustomPunch(175, true, 0, null, 72, 5, 15)
            // Zandronum-compatible
            MFIS E 4 A_CustomPunch(175, true, 0, null, 72, 5)
            //
            MFIS EFG 5
            TNT1 A 0 A_ReFire
            MFIS B 1 A_PlaySound("marzoleon/hadoken", CHAN_5)
            MFIS A 6
            Goto Ready
    }
}

Actor MarzoLeonKick : Kick {
    +INVENTORY.RESTRICTABSOLUTELY

    Inventory.RestrictedTo "MarzoLeon"
    Weapon.Kickback 1000
    Weapon.SelectionOrder 9999

    States {
        Ready:
            KICK A 0 A_WeaponReady
            Goto Fire
        Deselect:
            KICK A 0 A_Lower
            Loop
        Select:
            KICK A 0 A_Raise
            Loop
        Fire:
            KICK B 1
            KICK C 1
            KICK D 1
            KICK E 1 A_PlaySound("weapon/kick", CHAN_6, 1.0, 0.0)
            KICK F 1
            KICK G 1
            // GZDoom-only
            // KICK H 4 A_CustomPunch(20, false, 0, "BulletPuff", 64, 0, 0, "", "marzoleon/fist", "weapon/kickmiss")
            // Zandronum-compatible
            KICK H 4 A_CustomPunch(20, false, 0, "BulletPuff", 64, 0)
            KICK H 0 A_CheckLOF(3, 0, 64)
            KICK H 0 A_PlayWeaponSound("weapon/kickmiss")
            KICK H 0 A_Jump(256, 2)
            KICK H 0 A_PlayWeaponSound("marzoleon/fist")
            //
            KICK I 3 A_Recoil(7)
            KICK G 1
            KICK B 1 ACS_NamedExecuteAlways("ReturnKick", 0)
            KICK B 0 A_TakeInventory("MarzoLeonKick")
            Stop
    }
}

Actor MarzoLeonChainsaw : Chainsaw {
    +INVENTORY.RESTRICTABSOLUTELY

    Inventory.RestrictedTo "MarzoLeon"
    Weapon.Kickback -50
    Inventory.PickupSound "marzoleon/ohoho"
    Weapon.UpSound "marzoleon/weapons/chainsaw/start"
    Weapon.ReadySound "marzoleon/weapons/chainsaw/loop"

    States {
        Select:
            ISAW A 1 A_Raise
            Loop
        Deselect:
            ISAW A 0 {
                A_TakeInventory("QuadDamage", 1);
                A_TakeInventory("Regeneration", 1);
            }
            ISAW A 1 A_Lower
            Loop
        Ready:
            ISAW ABCD 2 A_WeaponReady
            Loop
        Fire:
            ISAW A 0 A_GiveInventory("QuadDamage", 1);
            ISAW A 0 A_GiveInventory("Regeneration", 1);
            ISAW D 0 A_PlaySound("marzoleon/haha", CHAN_5, 1.0)
            ISAW D 25 A_PlaySound("weapons/sawfull", CHAN_WEAPON, 0.8)
            Goto Hold
        Hold:
            ISAW A 0 A_GiveInventory("QuadDamage", 1);
            ISAW A 0 A_GiveInventory("Regeneration", 1);
            ISAW EF 2 A_Saw("weapons/sawfull", "weapons/sawhit", 6)
            ISAW AAA 0 A_SetAngle(FRandom(2.2, -2.2) + Angle)
            ISAW AAA 0 A_Recoil(-2.0)
            ISAW AAA 0 A_Quake(6, 12, 0, 128, "weapons/sawhit")
            ISAW EF 2 A_Saw("weapons/sawfull", "weapons/sawhit", 6)
            ISAW AAA 0 A_Recoil(-2.0)
            ISAW B 0 A_ReFire
            ISAW A 0 A_TakeInventory("QuadDamage", 1);
            ISAW A 0 A_TakeInventory("Regeneration", 1);
            Goto Ready
    }
}

