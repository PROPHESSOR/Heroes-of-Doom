Actor MarzoLeonRL : RocketLauncher {
    +INVENTORY.RESTRICTABSOLUTELY
    +WEAPON.NOAUTOAIM
    +WEAPON.AMMO_OPTIONAL
    +WEAPON.NOALERT

    Inventory.RestrictedTo "MarzoLeon"
    Inventory.PickupSound "marzoleon/pickup"

    Weapon.Kickback 100

    States {
        Select:
            TNT1 A 0 A_Raise
            Wait
        Deselect:
            TNT1 A 0 A_PlayWeaponSound("weapons/weapondown")
            GREN A 1 A_Lower
            Goto Deselect+1
        Ready:
            TNT1 A 0 A_PlayWeaponSound("marzoleon/weapons/rl/pickup")
            GRUP ABCDE 1
            GREN A 1 A_WeaponReady
            Goto Ready+6
        Fire:
            TNT1 A 0 A_JumpIfNoAmmo("Empty")
            TNT1 A 0 A_AlertMonsters
            TNT1 A 0 Radius_Quake(4, 3, 0, 1, 0)
            TNT1 A 0 A_PlaySound("marzoleon/weapons/rl/fire", CHAN_WEAPON)
            GREF BC 1 Bright
            GREF D 1 Bright
            GREF E 1 Bright A_FireCustomMissile("RifleGrenade", 0, TRUE, 0, 0, 0, 6.328125)
            GREF FGH 3
            GRER PQR 2
            GREN A 1
            TNT1 A 0 A_ReFire
            Goto Ready+6
        Empty:
            GREN A 4 A_PlayWeaponSound("prophessor/weapons/shotgun/click")
            Goto Ready+6
    }
}

Actor RifleGrenade {
    Projectile
    +DONTSPLASH
    +THRUSPECIES
    +DOOMBOUNCE
    -NOGRAVITY
    -GRENADETRAIL
    -ROCKETTRAIL

    Radius 6
    Height 6
    Speed 30
    Damage 24
    Species "Player"
    Scale 0.75

    Gravity 0.4
    WallBounceFactor 0.25
    BounceFactor 0.36
    ExplosionDamage 128
    ExplosionRadius 128

    Obituary "%o successfully played catch with %k's Grenade."
    SeeSound "marzoleon/weapons/rl/bounce"
    DeathSound "Weapons/RockLX"
    DamageType "Explosion"

    States {
        Spawn:
            TNT1 A 0
            TNT1 A 0 A_StopSound
        SpawnLoop:
            GRND A 1
            Loop
        Death:
            MISL B 8 Bright A_Explode
            MISL C 6 Bright
            MISL D 4 Bright
            Stop	
    }
}

